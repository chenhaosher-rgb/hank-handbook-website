/* pages/index/index.wxss */
.index-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 顶部横幅 */
.hero-banner {
  background: linear-gradient(135deg, #1a1a1a 0%, #333 100%);
  padding: 60rpx 30rpx 40rpx;
  color: #fff;
}

.banner-content {
  text-align: center;
}

.banner-title {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 20rpx;
  display: block;
}

.banner-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 40rpx;
  display: block;
}

.banner-stats {
  display: flex;
  justify-content: space-around;
  margin-top: 40rpx;
}

.stat-item {
  text-align: center;
}

.stat-number {
  font-size: 36rpx;
  font-weight: 700;
  color: #dc2626;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.8;
  display: block;
}

/* 快速搜索 */
.quick-search {
  background: #fff;
  padding: 30rpx;
  margin-top: 20rpx;
}

.search-bar {
  background: #f8f9fa;
  border-radius: 50rpx;
  padding: 24rpx 30rpx;
  text-align: center;
}

.search-placeholder {
  color: #666;
  font-size: 28rpx;
}

/* 热门分类 */
.hot-categories {
  background: #fff;
  padding: 30rpx;
  margin-top: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 30rpx;
  display: block;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.category-card {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.category-card:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.category-icon {
  font-size: 40rpx;
  margin-bottom: 15rpx;
  display: block;
}

.category-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 8rpx;
  display: block;
}

.category-count {
  font-size: 22rpx;
  color: #666;
  display: block;
}

/* 今日推荐 */
.today-recommend {
  background: #fff;
  padding: 30rpx;
  margin-top: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-more {
  font-size: 26rpx;
  color: #dc2626;
}

.recommend-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.recommend-item {
  background: linear-gradient(135deg, #dc2626 0%, #991b1b 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  color: #fff;
  position: relative;
  overflow: hidden;
}

.recommend-cover {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.recommend-icon {
  font-size: 50rpx;
  margin-right: 20rpx;
}

.recommend-badge {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: 600;
}

.recommend-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
  display: block;
}

.recommend-desc {
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 20rpx;
  display: block;
}

.recommend-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.download-count {
  font-size: 24rpx;
  opacity: 0.8;
}

.recommend-tag {
  background: rgba(255, 255, 255, 0.2);
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
}

/* 最新资料 */
.latest-resources {
  background: #fff;
  padding: 30rpx;
  margin-top: 20rpx;
}

.resource-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.resource-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.resource-item:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.resource-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.resource-content {
  flex: 1;
}

.resource-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 8rpx;
  display: block;
}

.resource-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 15rpx;
  display: block;
}

.resource-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.resource-time {
  font-size: 22rpx;
  color: #999;
}

.resource-downloads {
  font-size: 22rpx;
  color: #dc2626;
}

/* 学习路径 */
.learning-path {
  background: #fff;
  padding: 30rpx;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}

.path-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.path-item {
  display: flex;
  align-items: center;
  padding: 25rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.path-item:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.path-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.path-info {
  flex: 1;
}

.path-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 8rpx;
  display: block;
}

.path-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 15rpx;
  display: block;
}

.path-progress {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.progress-text {
  font-size: 22rpx;
  color: #dc2626;
  font-weight: 600;
}

.progress-bar {
  flex: 1;
  height: 8rpx;
  background: #e9ecef;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: #dc2626;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.path-arrow {
  font-size: 32rpx;
  color: #dc2626;
  margin-left: 20rpx;
}