<!--pages/index/index.wxml-->
<view class="index-container">
  <!-- 顶部横幅 -->
  <view class="hero-banner">
    <view class="banner-content">
      <text class="banner-title">汉克运营资料库</text>
      <text class="banner-subtitle">专业的运营知识库，助力你的成长之路</text>
      <view class="banner-stats">
        <view class="stat-item">
          <text class="stat-number">500+</text>
          <text class="stat-label">精品资料</text>
        </view>
        <view class="stat-item">
          <text class="stat-number">50K+</text>
          <text class="stat-label">用户下载</text>
        </view>
        <view class="stat-item">
          <text class="stat-number">98%</text>
          <text class="stat-label">好评率</text>
        </view>
      </view>
    </view>
  </view>

  <!-- 快速搜索 -->
  <view class="quick-search">
    <view class="search-bar" bindtap="navigateToSearch">
      <text class="search-placeholder">🔍 搜索运营资料...</text>
    </view>
  </view>

  <!-- 热门分类 -->
  <view class="hot-categories">
    <text class="section-title">🔥 热门分类</text>
    <view class="category-grid">
      <view 
        class="category-card"
        wx:for="{{hotCategories}}" 
        wx:key="id"
        bindtap="navigateToCategory"
        data-id="{{item.id}}"
      >
        <view class="category-icon">{{item.icon}}</view>
        <text class="category-name">{{item.name}}</text>
        <text class="category-count">{{item.count}}个资料</text>
      </view>
    </view>
  </view>

  <!-- 今日推荐 -->
  <view class="today-recommend">
    <view class="section-header">
      <text class="section-title">⭐ 今日推荐</text>
      <text class="section-more" bindtap="viewAllRecommend">查看全部</text>
    </view>
    <view class="recommend-list">
      <view 
        class="recommend-item"
        wx:for="{{todayRecommend}}" 
        wx:key="id"
        bindtap="viewResource"
        data-id="{{item.id}}"
      >
        <view class="recommend-cover">
          <view class="recommend-icon">{{item.icon}}</view>
          <view class="recommend-badge">{{item.badge}}</view>
        </view>
        <view class="recommend-info">
          <text class="recommend-title">{{item.title}}</text>
          <text class="recommend-desc">{{item.description}}</text>
          <view class="recommend-meta">
            <text class="download-count">📥 {{item.downloads}}</text>
            <text class="recommend-tag">{{item.tag}}</text>
          </view>
        </view>
      </view>
    </view>
  </view>

  <!-- 最新资料 -->
  <view class="latest-resources">
    <view class="section-header">
      <text class="section-title">🆕 最新资料</text>
      <text class="section-more" bindtap="navigateToLibrary">进入资料库</text>
    </view>
    <view class="resource-list">
      <view 
        class="resource-item"
        wx:for="{{latestResources}}" 
        wx:key="id"
        bindtap="viewResource"
        data-id="{{item.id}}"
      >
        <view class="resource-icon">{{item.icon}}</view>
        <view class="resource-content">
          <text class="resource-title">{{item.title}}</text>
          <text class="resource-desc">{{item.description}}</text>
          <view class="resource-footer">
            <text class="resource-time">{{item.time}}</text>
            <text class="resource-downloads">📥 {{item.downloads}}</text>
          </view>
        </view>
      </view>
    </view>
  </view>

  <!-- 学习路径 -->
  <view class="learning-path">
    <text class="section-title">🎯 学习路径</text>
    <view class="path-list">
      <view 
        class="path-item"
        wx:for="{{learningPaths}}" 
        wx:key="id"
        bindtap="viewPath"
        data-id="{{item.id}}"
      >
        <view class="path-icon">{{item.icon}}</view>
        <view class="path-info">
          <text class="path-title">{{item.title}}</text>
          <text class="path-desc">{{item.description}}</text>
          <view class="path-progress">
            <text class="progress-text">{{item.progress}}</text>
            <view class="progress-bar">
              <view class="progress-fill" style="width: {{item.progressPercent}}%"></view>
            </view>
          </view>
        </view>
        <view class="path-arrow">→</view>
      </view>
    </view>
  </view>
</view>