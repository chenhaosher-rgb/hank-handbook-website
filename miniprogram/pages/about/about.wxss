/* 关于页样式 */
.about-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.about-header {
  background: linear-gradient(135deg, #dc2626 0%, #991b1b 100%);
  padding: 80rpx 32rpx 60rpx;
  text-align: center;
  color: #ffffff;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid #ffffff;
  margin-bottom: 24rpx;
}

.name {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
}

.title {
  font-size: 26rpx;
  opacity: 0.9;
}

.about-content {
  padding: 32rpx;
}

.section {
  background-color: #ffffff;
  padding: 32rpx;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 20rpx;
}

.section-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.8;
}

.feature-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.feature-icon {
  font-size: 36rpx;
  flex-shrink: 0;
}

.feature-text {
  font-size: 28rpx;
  color: #666666;
}

.contact-btn {
  width: 100%;
  background-color: #dc2626;
  color: #ffffff;
  padding: 24rpx;
  border-radius: 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.contact-btn::after {
  border: none;
}

/* 联系弹窗（复用首页样式） */
.contact-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  position: relative;
  background-color: #ffffff;
  padding: 48rpx 32rpx;
  border-radius: 16rpx;
  width: 560rpx;
  text-align: center;
}

.modal-close {
  position: absolute;
  top: 16rpx;
  right: 24rpx;
  font-size: 48rpx;
  color: #999999;
  line-height: 1;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 32rpx;
}

.qr-code {
  width: 400rpx;
  height: 400rpx;
  margin: 0 auto 24rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 8rpx;
}

.qr-text {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 12rpx;
}

.qr-hint {
  font-size: 24rpx;
  color: #999999;
}
