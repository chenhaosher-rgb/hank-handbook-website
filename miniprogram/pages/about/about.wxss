/* 个人中心页面样式 */

.profile-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 用户头部 */
.user-header {
  background: linear-gradient(135deg, #dc2626 0%, #991b1b 100%);
  padding: 60rpx 30rpx 40rpx;
  color: white;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-details {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.user-id {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 未登录提示 */
.login-prompt {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 20rpx 0;
}

.avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  opacity: 0.6;
  margin-bottom: 24rpx;
}

.login-text {
  margin-bottom: 32rpx;
}

.prompt-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.prompt-desc {
  display: block;
  font-size: 24rpx;
  opacity: 0.8;
}

.login-btn {
  background-color: white;
  color: #dc2626;
  border-radius: 48rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
  font-weight: 600;
}

/* 功能菜单区域 */
.menu-section {
  margin-top: 24rpx;
  background-color: white;
}

.section-title {
  padding: 24rpx 30rpx 12rpx;
  font-size: 24rpx;
  color: #999;
}

.menu-list {
  padding: 0 30rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.menu-icon {
  font-size: 40rpx;
  width: 48rpx;
  text-align: center;
}

.menu-title {
  font-size: 28rpx;
  color: #333;
}

.menu-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.menu-count {
  font-size: 24rpx;
  color: #999;
  background-color: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.menu-arrow {
  font-size: 40rpx;
  color: #ccc;
  line-height: 1;
}

/* 退出登录 */
.logout-section {
  margin: 40rpx 30rpx;
}

.logout-btn {
  width: 100%;
  background-color: white;
  color: #dc2626;
  border: 2rpx solid #dc2626;
  border-radius: 48rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 600rpx;
  background-color: white;
  border-radius: 24rpx;
  overflow: hidden;
  animation: modalSlideUp 0.3s ease;
}

@keyframes modalSlideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.close-btn {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  padding: 0 8rpx;
}

.modal-body {
  padding: 40rpx;
}

/* 关于我们样式 */
.about-logo {
  text-align: center;
  margin-bottom: 32rpx;
}

.about-logo image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 24rpx;
}

.about-title {
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  color: #333;
  margin-bottom: 16rpx;
}

.about-desc {
  font-size: 24rpx;
  text-align: center;
  color: #666;
  margin-bottom: 32rpx;
}

.about-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 32rpx;
}

.info-item {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

.about-qr {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.about-qr image {
  width: 300rpx;
  height: 300rpx;
  border-radius: 16rpx;
  border: 1rpx solid #f0f0f0;
}

.about-qr text {
  font-size: 24rpx;
  color: #999;
}

/* 联系我们样式 */
.contact-qr {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.contact-qr image {
  width: 400rpx;
  height: 400rpx;
  border-radius: 16rpx;
  border: 1rpx solid #f0f0f0;
}

.qr-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.qr-hint {
  font-size: 24rpx;
  color: #999;
}