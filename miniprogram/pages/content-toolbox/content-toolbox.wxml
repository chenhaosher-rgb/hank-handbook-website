<!--内容创作工具箱页面-->
<view class="container">
  <!-- 页面头部 -->
  <view class="page-header">
    <view class="breadcrumb">
      <text class="breadcrumb-item">首页</text>
      <text class="breadcrumb-separator">></text>
      <text class="breadcrumb-item">资源库</text>
      <text class="breadcrumb-separator">></text>
      <text class="breadcrumb-item current">内容创作工具箱</text>
    </view>
    
    <view class="resource-hero">
      <view class="resource-badge">内容创作</view>
      <view class="resource-title">内容创作工具箱</view>
      <view class="resource-subtitle">AI 内容生成工具包，包含文案模板、选题策略、爆款内容公式，让你的内容创作事半功倍。</view>
      
      <view class="resource-stats">
        <view class="stat-item">
          <view class="stat-number">15MB</view>
          <view class="stat-label">文件大小</view>
        </view>
        <view class="stat-item">
          <view class="stat-number">856</view>
          <view class="stat-label">下载次数</view>
        </view>
        <view class="stat-item">
          <view class="stat-number">免费</view>
          <view class="stat-label">价格</view>
        </view>
      </view>
      
      <view class="resource-actions">
        <button class="btn btn-primary" bindtap="downloadResource">
          <text class="btn-icon">📥</text>
          <text>立即获取</text>
        </button>
        <button class="btn btn-outline" bindtap="previewResource">
          <text class="btn-icon">👁️</text>
          <text>预览内容</text>
        </button>
      </view>
    </view>
  </view>

  <!-- 工具箱内容 -->
