              <view class="feature-item">✓ 产品介绍模板</view>
              <view class="feature-item">✓ 活动推广模板</view>
              <view class="feature-item">✓ 用户故事模板</view>
            </view>
          </view>
        </view>
        
        <view class="module-item">
          <view class="module-icon">🎯</view>
          <view class="module-content">
