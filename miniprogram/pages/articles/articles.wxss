/* 文章列表页样式 */
.articles-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 32rpx;
}

/* 分类筛选 */
.categories {
  background-color: #ffffff;
  padding: 24rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
}

.categories-scroll {
  width: 100%;
}

.category-list {
  display: inline-flex;
  padding: 0 32rpx;
  white-space: nowrap;
}

.category-item {
  padding: 12rpx 32rpx;
  margin-right: 16rpx;
  background-color: #f5f5f5;
  color: #666666;
  font-size: 28rpx;
  border-radius: 48rpx;
  transition: all 0.3s ease;
}

.category-item.active {
  background-color: #dc2626;
  color: #ffffff;
}

/* 文章列表 */
.articles-list {
  padding: 24rpx 32rpx;
}

.article-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.05);
}

.article-image {
  width: 100%;
  height: 360rpx;
  background-color: #f5f5f5;
}

.article-content {
  padding: 32rpx;
}

.article-badge {
  display: inline-block;
  padding: 4rpx 12rpx;
  background-color: #dc2626;
  color: #ffffff;
  font-size: 20rpx;
  border-radius: 4rpx;
  margin-bottom: 12rpx;
}

.article-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.article-excerpt {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.article-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999999;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 32rpx;
}

.load-more-text {
  color: #dc2626;
  font-size: 28rpx;
}
