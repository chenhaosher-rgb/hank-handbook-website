/* 文章详情页样式 */
.article-detail-page {
  min-height: 100vh;
  background-color: #ffffff;
}

.article-header {
  padding: 32rpx;
}

.article-category {
  display: inline-block;
  padding: 8rpx 20rpx;
  background-color: #dc2626;
  color: #ffffff;
  font-size: 24rpx;
  border-radius: 24rpx;
  margin-bottom: 20rpx;
}

.article-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1a1a1a;
  line-height: 1.4;
  margin-bottom: 20rpx;
}

.article-meta {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999999;
}

.meta-divider {
  margin: 0 16rpx;
}

.article-cover {
  width: 100%;
  height: 400rpx;
  background-color: #f5f5f5;
}

.article-content {
  padding: 32rpx;
  font-size: 30rpx;
  line-height: 1.8;
  color: #333333;
}

.article-content h2 {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin: 32rpx 0 20rpx;
}

.article-content p {
  margin-bottom: 20rpx;
}

.article-content ol,
.article-content ul {
  padding-left: 40rpx;
  margin-bottom: 20rpx;
}

.article-content li {
  margin-bottom: 12rpx;
}

.article-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  padding: 0 32rpx 32rpx;
}

.tag {
  padding: 12rpx 24rpx;
  background-color: #f5f5f5;
  color: #666666;
  font-size: 24rpx;
  border-radius: 24rpx;
}

.article-actions {
  padding: 32rpx;
  border-top: 2rpx solid #f5f5f5;
}

.action-btn {
  width: 100%;
  background-color: #dc2626;
  color: #ffffff;
  padding: 24rpx;
  border-radius: 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.action-btn::after {
  border: none;
}
