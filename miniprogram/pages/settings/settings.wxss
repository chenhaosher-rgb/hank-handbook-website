/* 页面样式 */

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 60rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 48rpx;
}

.goto-search-btn {
  background-color: #dc2626;
  color: white;
  border-radius: 48rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
  font-weight: 600;
}
