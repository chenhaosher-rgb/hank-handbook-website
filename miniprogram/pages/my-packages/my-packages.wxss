/* 我的资料包页面样式 */

.packages-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 24rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 60rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 48rpx;
}

.goto-search-btn {
  background-color: #dc2626;
  color: white;
  border-radius: 48rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
  font-weight: 600;
}

/* 资料包列表 */
.packages-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.package-item {
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.package-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.package-icon {
  font-size: 48rpx;
  width: 80rpx;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.package-info {
  flex: 1;
}

.package-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.package-time {
  font-size: 22rpx;
  color: #999;
}

.package-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.package-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 20rpx;
}

.package-tags {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
  flex: 1;
}

.tag {
  padding: 6rpx 16rpx;
  background-color: #f5f5f5;
  color: #666;
  font-size: 20rpx;
  border-radius: 20rpx;
}

.package-actions {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  padding: 12rpx 20rpx;
  background-color: #f5f5f5;
  color: #333;
  font-size: 22rpx;
  border-radius: 20rpx;
  border: none;
  line-height: 1;
}

.action-btn.delete {
  background-color: #fee;
  color: #dc2626;
}