/* 搜索记录页面样式 */

.history-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 60rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 48rpx;
}

.goto-search-btn {
  background-color: #dc2626;
  color: white;
  border-radius: 48rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
  font-weight: 600;
}

/* 搜索记录容器 */
.history-container {
  padding: 24rpx;
}

/* 操作栏 */
.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.history-count {
  font-size: 24rpx;
  color: #999;
}

.clear-btn {
  padding: 12rpx 24rpx;
  background-color: white;
  color: #dc2626;
  font-size: 22rpx;
  border-radius: 20rpx;
  border: 1rpx solid #dc2626;
  line-height: 1;
}

/* 记录列表 */
.history-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.history-item {
  background-color: white;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.history-main {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
  min-width: 0;
}

.history-icon {
  font-size: 32rpx;
  flex-shrink: 0;
}

.history-info {
  flex: 1;
  min-width: 0;
}

.history-keyword {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.history-meta {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 22rpx;
  color: #999;
}

.history-dot {
  color: #ddd;
}

.history-actions {
  flex-shrink: 0;
}

.action-btn {
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  color: #666;
  font-size: 22rpx;
  border-radius: 20rpx;
  border: none;
  line-height: 1;
}