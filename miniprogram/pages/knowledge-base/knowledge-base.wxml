      <text class="breadcrumb-separator">></text>
      <text class="breadcrumb-item current">运营知识库 VIP</text>
    </view>
    
    <view class="resource-hero">
      <view class="resource-badge">热门推荐</view>
      <view class="resource-title">运营知识库 VIP</view>
