/* 运营知识库 VIP 页面样式 */

.container {
  background-color: #f8f9fa;
  min-height: 100vh;
}

/* 页面头部 */
.page-header {
  background: linear-gradient(135deg, #dc2626 0%, #991b1b 100%);
  padding: 40rpx 30rpx;
  color: white;
}

.breadcrumb {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  font-size: 24rpx;
}

.breadcrumb-item {
  color: rgba(255, 255, 255, 0.8);
}

.breadcrumb-separator {
  margin: 0 10rpx;
  color: rgba(255, 255, 255, 0.6);
}

.breadcrumb-item.current {
  color: white;
  font-weight: 600;
}

.resource-hero {
  text-align: center;
}

.resource-badge {
  display: inline-block;
  background-color: rgba(255, 255, 255, 0.2);
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
  font-size: 24rpx;
  font-weight: 600;
  margin-bottom: 30rpx;
}

.resource-title {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 20rpx;
  line-height: 1.2;
}

.resource-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  line-height: 1.6;
  margin-bottom: 50rpx;
}

.resource-stats {
  display: flex;
  justify-content: center;
  gap: 80rpx;
  margin-bottom: 50rpx;
}

.stat-item {
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.8;
}

.resource-actions {
  display: flex;
  justify-content: center;
  gap: 30rpx;
}

.btn {
  padding: 24rpx 48rpx;
  border-radius: 60rpx;
  font-weight: 600;
  font-size: 28rpx;
  border: none;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.btn-primary {
  background-color: white;
  color: #dc2626;
}

.btn-outline {
  background-color: transparent;
  color: white;
  border: 2rpx solid white;
}

/* 知识库内容 */
.knowledge-content {
  padding: 60rpx 30rpx;
}

.content-main {
  margin-bottom: 60rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 40rpx;
  color: #1f2937;
}

.knowledge-modules {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.module-item {
  display: flex;
  gap: 30rpx;
  padding: 40rpx;
  background-color: white;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.08);
}

.module-icon {
  font-size: 60rpx;
  flex-shrink: 0;
  width: 100rpx;
  height: 100rpx;
  background-color: #f8f9fa;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.module-content {
  flex: 1;
}

.module-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  color: #1f2937;
}

.module-description {
  color: #6b7280;
  line-height: 1.6;
  margin-bottom: 20rpx;
  font-size: 26rpx;
}

.module-features {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.feature-item {
  padding: 8rpx 0;
  color: #6b7280;
  font-size: 24rpx;
}

/* 侧边栏样式 */
.content-sidebar {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.sidebar-card {
  background-color: white;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.08);
}

.card-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: #1f2937;
}

.feature-list,
.audience-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.feature-item,
.audience-item {
  padding: 16rpx 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #1f2937;
}

/* 相关资源 */
.related-resources {
  padding: 60rpx 30rpx;
  background-color: white;
}

.resources-grid {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  margin-top: 40rpx;
}

.resource-card {
  background-color: #f8f9fa;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.08);
}

.resource-card-image {
  position: relative;
  height: 240rpx;
  overflow: hidden;
}

.resource-placeholder {
  width: 100%;
  height: 100%;
  background-color: #e5e7eb;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 72rpx;
  color: #9ca3af;
}

.resource-category {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  background-color: #dc2626;
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: 600;
}

.resource-card-content {
  padding: 30rpx;
}

.resource-card-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  color: #1f2937;
}

.resource-card-description {
  color: #6b7280;
  font-size: 24rpx;
  line-height: 1.5;
}
