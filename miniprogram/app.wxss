/* 全局样式 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 
    'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  font-size: 16px;
  line-height: 1.6;
  color: #1a1a1a;
  background-color: #f5f5f5;
}

/* CSS 变量 */
:root {
  --color-primary: #dc2626;
  --color-primary-light: #ef4444;
  --color-primary-dark: #991b1b;
  --color-secondary: #1a1a1a;
  --color-text: #333333;
  --color-text-light: #666666;
  --color-text-lighter: #999999;
  --color-border: #e5e5e5;
  --color-background: #f5f5f5;
  --color-white: #ffffff;
  --color-success: #22c55e;
  --color-warning: #f59e0b;
  --color-error: #ef4444;
  --border-radius: 8px;
  --spacing-xs: 4px;
  --spacing-sm: 8px;
  --spacing-md: 16px;
  --spacing-lg: 24px;
  --spacing-xl: 32px;
}

/* 容器 */
.container {
  padding: 32rpx;
}

.container-full {
  width: 100%;
}

/* 标题样式 */
.title {
  font-size: 48rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 24rpx;
}

/* 文本样式 */
.text-primary {
  color: #dc2626;
}

.text-secondary {
  color: #666666;
}

.text-light {
  color: #999999;
}

.text-small {
  font-size: 24rpx;
}

.text-center {
  text-align: center;
}

/* 按钮样式 */
.btn {
  padding: 24rpx 48rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
  transition: all 0.3s ease;
}

.btn-primary {
  background-color: #dc2626;
  color: #ffffff;
}

.btn-outline {
  background-color: transparent;
  color: #dc2626;
  border: 2rpx solid #dc2626;
}

.btn-small {
  padding: 16rpx 32rpx;
  font-size: 24rpx;
}

/* 卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.05);
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  background-color: #f5f5f5;
  color: #666666;
  font-size: 24rpx;
  border-radius: 4rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
}

.tag-primary {
  background-color: #dc2626;
  color: #ffffff;
}

.tag-outline {
  background-color: transparent;
  border: 2rpx solid #e5e5e5;
}

/* 徽章样式 */
.badge {
  display: inline-block;
  padding: 4rpx 12rpx;
  background-color: #dc2626;
  color: #ffffff;
  font-size: 20rpx;
  border-radius: 24rpx;
  margin-left: 8rpx;
}

/* 分隔线 */
.divider {
  height: 2rpx;
  background-color: #e5e5e5;
  margin: 32rpx 0;
}

/* Flex 布局 */
.flex {
  display: flex;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-wrap {
  flex-wrap: wrap;
}

/* 间距工具类 */
.mt-xs { margin-top: 8rpx; }
.mt-sm { margin-top: 16rpx; }
.mt-md { margin-top: 24rpx; }
.mt-lg { margin-top: 32rpx; }
.mt-xl { margin-top: 48rpx; }

.mb-xs { margin-bottom: 8rpx; }
.mb-sm { margin-bottom: 16rpx; }
.mb-md { margin-bottom: 24rpx; }
.mb-lg { margin-bottom: 32rpx; }
.mb-xl { margin-bottom: 48rpx; }

.ml-xs { margin-left: 8rpx; }
.ml-sm { margin-left: 16rpx; }
.ml-md { margin-left: 24rpx; }

.mr-xs { margin-right: 8rpx; }
.mr-sm { margin-right: 16rpx; }
.mr-md { margin-right: 24rpx; }

.pt-xs { padding-top: 8rpx; }
.pt-sm { padding-top: 16rpx; }
.pt-md { padding-top: 24rpx; }
.pt-lg { padding-top: 32rpx; }

.pb-xs { padding-bottom: 8rpx; }
.pb-sm { padding-bottom: 16rpx; }
.pb-md { padding-bottom: 24rpx; }
.pb-lg { padding-bottom: 32rpx; }

.pl-sm { padding-left: 16rpx; }
.pl-md { padding-left: 24rpx; }

.pr-sm { padding-right: 16rpx; }
.pr-md { padding-right: 24rpx; }

/* 加载样式 */
.loading {
  text-align: center;
  padding: 48rpx;
  color: #999999;
}

.loading-icon {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #e5e5e5;
  border-top-color: #dc2626;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 80rpx 32rpx;
  color: #999999;
}

.empty-icon {
  font-size: 96rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}
